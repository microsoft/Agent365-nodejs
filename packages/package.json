{
  "name": "@microsoft/agent365-packages",
  "version": "1.0.0",
  "description": "Agent365 SDK packages for AI agents built with TypeScript/Node.js",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces",
    "build:watch": "npm run build:watch --workspaces",
    "clean": "npm run clean --workspaces",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "ci": "npm run ci --workspaces",
    "pack": "npm pack --workspaces --pack-destination=../"
  },
  "workspaces": [
    "agents-a365-runtime",
    "agents-a365-observability",
    "agents-a365-notifications",
    "agents-a365-tooling",
    "agents-a365-tooling-extensions-claude",
    "agents-a365-tooling-extensions-openai",
    "agents-a365-tooling-extensions-langchain"
  ],
  "keywords": [
    "ai",
    "agents",
    "azure",
    "typescript"
  ],
  "author": "Microsoft Corporation",
  "license": "See license file",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/Agent365.git",
    "directory": "nodejs/packages"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
