{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>"
  ],
  "testMatch": [
    "**/*.ts",
    "**/?(*.)+(spec|test).ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts"
  ],
   "moduleNameMapper": {
    "^@opentelemetry/api$": "<rootDir>/../node_modules/@opentelemetry/api"
  },
  "moduleDirectories": ["node_modules", "<rootDir>/../node_modules"]
}