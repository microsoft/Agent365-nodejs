# Environment variables for integration tests
# Copy this file to tests/.env and fill in your values

# Azure OpenAI Configuration (required for integration tests)
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Agent365 Configuration (optional, defaults will be used if not set)
AGENT365_TENANT_ID=your-tenant-id
AGENT365_CORRELATION_ID=your-correlation-id  
AGENT365_AGENT_ID=your-agent-id

# Test Configuration
TEST_TIMEOUT=30000
TEST_LOG_LEVEL=info

# Skip tests when Azure OpenAI config is missing (default: true)
# Set to 'false' to run tests anyway (they will fail without valid config)
SKIP_ON_MISSING_CONFIG=false
